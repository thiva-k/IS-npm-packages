.ui.items > .item {
    &.application-list-item {
        background-color: @white;
        margin-bottom: 25px;
        padding: @applicationListItemPadding;
        border: @defaultBorderWidth solid @defaultBorderColor;
        border-radius: @defaultBorderRadius;
        overflow: hidden;
        height: 100%;

        &:hover {
            cursor: pointer;
            box-shadow: @defaultCardHoverBoxShadow;

            .app-avatar {
                &.bg-image {
                    .initials {
                        text-shadow: 1px 1px 3px darken(@primaryColor, 20);
                    }
                }
            }
        }
        .content {
            flex: 0 1 auto;
            &:hover {
                color: @headerColor;
            }
            a.header:hover {
                color: @headerColor;
            }
        }
        .icon-container {
            margin: auto 0;

            .ui.mini.image {
                width: @littleWidth; // Make the image larger than the default `mini` size
            }
        }
        .text-content-container {
            margin-top: 5px;
            margin-left: 5px;

            &.app-text {
                margin-top: 0;
                display: flex;
                justify-content: center;
                flex-direction: column;
                align-items: flex-start;
            }
            .header.app-header{
                display: flex;
                align-items: center;
            }
            .item-header {
                line-height: initial;
                color: @applicationListItemHeaderColor;
                float: left;
                max-width: @applicationListItemHeaderMaxWidth;
                white-space: normal;
                text-overflow: ellipsis;
                overflow: hidden;
                display: -webkit-box;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical;
            }
            .item-description {
                color: @applicationListItemDescColor;
                margin-top: 0;
                max-width: @applicationListItemDescMaxWidth;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
                min-height: @applicationListItemDescMinWidth;

                    &.app-description {
                        margin: 2px 0;
                    }
            }
            .tag {
                margin: 0;
                font-size: 0.8em;
            }
            .favourite-icon {
                margin-left: 5px;

                &.favoured {
                    color: @starColor;
                }
            }
        }
    }
}

.hint-description {
    color: @applicationListItemDescColor !important;
    margin-top: -0.5rem 0 !important;
}
