/*-------------------------------
            Pages
--------------------------------*/

// Overview Page

@overviewPageTechnologyShowcaseCardsMarginRight: 4em;
@overviewPageJumbotronPadding: 4em 3em;
@overviewPageQuickLinksCardMaxWidth: 250px;
@overviewPageJumbotronAnimatedBackgroundTransition: background-position .5s ease;
@overviewPageJumbotronAnimatedBackgroundHoverXPositionOffset: 10px;
@overviewPageJumbotronAnimatedBackgroundHoverYPositionOffset: 10px;

/*-------------------------------
      Connector Sections
--------------------------------*/

@connectorSectionWithImageBgHeight: 120px;

/*-------------------------------
      Permissions Tree
--------------------------------*/

@treeArrowBackgroundColor: #bfbfbf;

/*-------------------------------
    Sign On Authenticator Panel
--------------------------------*/

@signOnMethodsAuthStepSectionDisplay: flex;
@signOnMethodsAuthStepSectionOverflow: auto;
@signOnMethodsAuthStepSectionMaxHeight: 375px;
@signOnMethodsAuthStepSectionBorder: none;
@signOnMethodsAuthStepSectionPadding: 1em 3em 1em 0;
@signOnMethodsAuthStepSectionMaxWidth: 75vw;
@signOnMethodsAuthCardFontSize: 0.9em;
@signOnMethodsAuthStepMinHeight: 95px;
@signOnMethodsAuthStepBorderColor: rgba(34,36,38,.15);

@signOnMethodsAuthStepContainerMarginRight: 68px;

@signOnMethodsAuthStepDisplay: flex;
@signOnMethodsAuthStepWidth: 210px;
@signOnMethodsAuthStepOverflow: auto;
@signOnMethodsAuthStepFlexDirection: row;
@signOnMethodsAuthStepPadding: 15px;

/*-------------------------------
      IDP Template Grid
--------------------------------*/

@idpTemplateGridPaddingTop: 1.5em;

/*----------------------------------
          Form Container
------------------------------------*/

@formContainerMaxWidth: 750px;
@formWrapperMaxHeight: 55vh;
@applicationSubjectSelectWidth: 820px;

/*-------------------
    Tenant Dropdown
--------------------*/

@tenantDropdownPadding: 0;
@tenantDropdownMinWidth: 270px;
@tenantDropdownTenantMargin: 5px 0;
@tenantDropdownTenantPadding: 8px 20px;
@tenantDropdownTriggerDisplayNameMaxWidth: 120px;
@tenantDropdownTriggerBorderRadius: 25px;
@tenantDropdownTriggerTextColor: #ffffff;
@tenantDropdownTriggerHoverBackground: darken(#EAEFF4, 10);
@tenantDropdownTriggerActiveBackground: darken(#EAEFF4, 10);
@tenantDropdownDefaultLabelBackground: #eaeaea;
@tenantDropdownDefaultLabelBorderColor: #767676;
@tenantDropdownDefaultButtonBackground: #fff1eb;
@tenantDropdownDefaultButtonBorderColor: #ffa176;
@tenantDropdownDefaultButtonHoverBorderColor: #e64800;
@tenantDropdownLinkMargin: 0.2rem 0.5rem;
@tenantDropdownLinkMinHeight: 36px;
@tenantDropdownTriggerBackground: #212A32;
@tenantDropdownWrapperSpacingLeft: 15px;
@tenantDropdownSeparatorBorderColor: #7a8084;
