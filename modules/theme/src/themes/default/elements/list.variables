/*******************************
            List
*******************************/

/*------------------------
   Settings section list
--------------------------*/

/* List Padding */
@settingsSectionInnerListHeaderPaddingLeft: 37px;

/*------------------------
   User roles list
--------------------------*/

/* List Padding */
@userRolesListPadding: 0.5em 0.5em;

/* List Margin */
@userRolesListMargin: 0em;

/* List Item Font Color */
@userRolesListItemFontColor: #666666;

/* List Item Icon Padding */
@userRolesListIconPaddingRight: 2px;

/* List Item Background Color */
@userRolesListItemBackgroundColorOnHover: #f7f7f7;

/* List Item Border Radius */
@userRolesListItemBorderRadius: 0.5em;

/* Role List Icon wrapper */
@roleListWrapperColor: #e8e8e8;

/*------------------------
   roles list
--------------------------*/

@userRoleAvatarSize: 41px;

/*------------------------
   Dynamic Fields
--------------------------*/

@borderRadius: @defaultBorderRadius;
@raisedShadow: 0px 2px 3px 0px @borderColor;
@menuBorderWidth: 1px;
@menuBorderColor: @borderColor;
@menuBorder: @menuBorderWidth solid @menuBorderColor;
@menuBoxShadow: @raisedShadow;
@menuBorderRadius: @borderRadius;
@dynamicFieldButtons: 108px;

/*------------------------
      Resource List
--------------------------*/

@resourceListItemBorderColor: @lightBorderColor;

@resourceListFillVariationOuterBorder: @defaultBorderWidth solid @resourceListItemBorderColor;
@resourceListFillVariationItemPadding: @veryRelaxedItemVerticalPadding 0.9em !important;
