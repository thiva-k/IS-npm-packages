.copy-field {
    input {
        font-size: 0.9em;
        padding: 0.7em!important;
        background-color: @galleryGray!important;
        border: none!important;
        font-style: italic;
        color: @doveGray!important;
    }
}

.ui.input {
    border-radius: @defaultBorderRadius;
}

/*******************************
    Claim Search Variation
*******************************/
.ui.icon.input {
    &.available-claim-search {
       padding-left: 10px;
       width: 100%;
       margin: 10px 0px;
    }
}

.ui.input {
    &.panel-url-input {
        height: 2em;
        font-size: 0.9em;
        color: #666767 !important;
    }
}

/*-------------------------------
         Copy Input Field
--------------------------------*/

.ui.input {
    &.copy-input {
        .copy-input-eye-icon {
            margin-right: @copyInputFieldMarginRight;
        }
        &.copy-input-dark {
            input {
                background: #29363c;
                color: white;
            }
            
            &.spaced {
                margin: 15px 0;
            }
        }
    }
}

/*-------------------------------
 Remove Duplicated Eye-Icon for Password Fields in MS Edge Browser
--------------------------------*/
input[type=password]::-ms-reveal, input[type=password]::-ms-clear {
    display: none;
}

/*-------------------------------
  Addon wrapper for input fields to avoid
  overlapping with browser added icons
  ex: Password Managers
--------------------------------*/
.ui.input {
    &.addon-wrapper {
        margin: 0;
        outline: 0;
        border: @border;
        border-radius: @borderRadius;
        box-shadow: @boxShadow;
        transition: @transition;

        &:focus-within {
            border-color: @focusBorderColor;
        }

        > input {
            border: none;
            max-width: calc(100% - @inputAddonWrapperOffset);
        }
    }
}

/*-------------------------------
  Addon field wrapper for input fields in My Account
  & Console to avoid overlapping with browser added icons
  ex: Password Managers
--------------------------------*/
.addon-field-wrapper {
    .ui.input {
        margin: 0;
        outline: 0;
        border: @border;
        border-radius: @borderRadius;
        box-shadow: @boxShadow;
        transition: @transition;

        &:focus-within {
            border-color: @focusBorderColor;
        }

        > input {
            border: none;
            max-width: calc(100% - @inputAddonWrapperOffset);
        }
    }  
}

/**
 * When the autocomplete input from Oxygen UI is wrapped in `Forms` component,
 * its styles are being overridden by the `Forms` component styles. To avoid this,
 * we need to override the styles of the autocomplete input from Oxygen UI.
*/

.forms-wrapped-autocomplete-render-input {
    border: none !important;
    padding: 0.4% !important;
}

.forms-wrapped-autocomplete {
    padding-top: 0.6% !important;
    padding-bottom: 0% !important;
}
