.ui.button {
    box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.15);
    border-radius: @buttonBorderRadius;
    font-size: 1rem;
    font-weight: 400;
    padding: 14px 24px;

    &.primary:not(.basic) {
        background: linear-gradient(77.74deg, @gradientStop1 11.16%, @gradientStop2 99.55%) !important;

        &:hover, &:focus, &:active {
            filter: brightness(0.95);
        }   
    }
}

.ui.button.basic {
    border-radius: @buttonBorderRadius;

    &.link-button {
        // Remove outline.
        box-shadow: none !important;

        // Override outline in primary variation.
        &.primary {
            box-shadow: none !important;
        }

        &:hover {
            &.hover {
                &-underline {
                    text-decoration: underline;
                }
            }
        }
        &.compact {
            padding: 0;
        }
        &.positive {
            color: @positiveColor;
        }
        &.negative {
            color: @negativeColor;
        }
        &.warning {
            color: @warningColor !important;
        }
        &.info {
            color: @infoColor !important;
        }
        &.loader {
            &-left, &-right {
                display: inline-flex;

                .ui.loader {
                    margin: 0 6px;
                }
            }
        }
        &.with-hover {
            &:hover {
                background: @backgroundColor;
            }
            &:active {
                background: @downBackgroundColor;
            }
        }
        &.with-bold-text {
            font-weight: bold;
        }
        &.with-no-border {
            -webkit-border-radius: 0;
            -moz-border-radius: 0;
            border-radius: 0;
            border-style: none;
            border: 0px transparent;
            box-shadow: none !important;

            &:hover, &:focus, &:active {
                color: inherit;
                background: transparent !important;
                box-shadow: none !important;
            }
        }
    }
    &.positive-modal-link-button {
        background: transparent;
        color: @positivePrimaryButtonColor;

        &.with-hover {
            &:hover {
                background: @backgroundColor;
            }
            &:active {
                background: @downBackgroundColor;
            }
        }
    }
    &.negative-modal-link-button {
        background: transparent;
        color: @negativePrimaryButtonColor;

        &.with-hover {
            &:hover {
                background: @backgroundColor;
            }
            &:active {
                background: @downBackgroundColor;
            }
        }
    }
    &.warning-modal-link-button {
        background: transparent;
        color: @warningPrimaryButtonColor;

        &.with-hover {
            &:hover {
                background: @backgroundColor;
            }
            &:active {
                background: @downBackgroundColor;
            }
        }
    }
    &.info-modal-link-button {
        background: transparent;
        color: @infoPrimaryButtonColor;

        &.with-hover {
            &:hover {
                background: @backgroundColor;
            }
            &:active {
                background: @downBackgroundColor;
            }
        }
    }
    &.positive-modal-primary-button {
        background-color: @positivePrimaryButtonColor;
        color: @modalPrimaryButtonFontColor;
    }
    &.negative-modal-primary-button {
        background-color: @negativePrimaryButtonColor;
        color: @modalPrimaryButtonFontColor;
    }
    &.warning-modal-primary-button {
        background-color: @warningPrimaryButtonColor;
        color: @modalPrimaryButtonFontColor;

    }
    &.info-modal-primary-button {
        background-color: @infoPrimaryButtonColor;
        color: @modalPrimaryButtonFontColor;
    }
    &.grid-button {
        margin-top: 23px;

        &.wizard {
            margin-top: -8px;
            margin-right: 0;
        }
    }
}

.ui.basic.button {
    &.borderless-button {
        border: none;
        margin-right: -15px;
        box-shadow: none !important;

        &:hover, &:focus, &:active {
            background: transparent !important;
            box-shadow: none !important;
        }
    }
    &.input-add-on {
        box-shadow: none;
        border: @inputAddOnBorder;
        border-left: 0;

        &.organizations{
            padding-right: 1.4em !important;
        }
    }

    &.test-button {
        color: @primaryColor !important;
        border-color: @primaryColor;
        box-shadow: 0 0 0 1px @primaryColor inset;

        &:hover, &:focus {
            box-shadow: 0 0 0 1px @primaryColor inset;
            color: @primaryColor !important;

            i {
                color: @primaryColor;
            }
        }

        i {
            color: @primaryColor;

            &:hover {
                color: @primaryColor;
            }
        }

        &.red {
            color: @red !important;

            &:hover {
                color: @red !important;
            }
        }

        &.green {
            color: @green !important;

            &:hover {
                color: @green !important;
            }
        }
    }
    &:focus-visible{
        outline: @focusVisibleOutline;
    }
}

.ui.labeled.icon.button {
    &.borderless-button {
        border: none;
        box-shadow: none;
        padding-left: 3em !important;
        margin-right: -15px;

        i {
            background: transparent;
        }
    }
}

.ui.button {
    &.warning {
        color: @white;
        background-color: @warningColor;
    }
    &.info {
        color: @white;
        background-color: @infoColor;
    }
}

/*******************************
     Claim Mapping Variation
*******************************/

.ui.button.toggle.active {
     &.claim-mapping-button {
       background-color: #f47b20 !important;
     }
}

.ui.button {
   &.claim-mapping-button {
       background: #e8e8e8 none;
   }
    &.claim-selection-add-button {
          background: #f4f7f9 none;
    }
}

.ui.button:hover {
   &.claim-mapping-button {
        background-color: #CACBCD;
        background-image: none;
        box-shadow: 0px 0px 0px 1px transparent inset, 0px 0em 0px 0px rgba(34, 36, 38, 0.15) inset;
        color: rgba(0, 0, 0, 0.8);
    }
    &.claim-selection-add-button {
            background-color: #CACBCD;
            background-image: none;
            box-shadow: 0px 0px 0px 1px transparent inset, 0px 0em 0px 0px rgba(34, 36, 38, 0.15) inset;
            color: rgba(0, 0, 0, 0.8);
        }
}

.ui.button {
    &.meta-columns-button {
        padding: @metaColumnsButtonPadding;
    }
}

.ui.button {
    &.generate-password-button {
        padding: @generatePasswordButtonPadding;
        margin-top: @generatePasswordButtonMarginTop;
    }
}

.ui.button {
    &.oidc-action-button {
        min-width: @OIDCActionButtonMinWidth;
        padding: @OIDCActionButtonPadding;
        font-size: @OIDCActionButtonFontSize;
        margin-left: @OIDCActionButtonMarginLeft;
    }
}

.ui.button {
   &.certificate-info-link-button {
      padding-left: 0px;
   }
}

.ui.button {
   &.idp-certificate-download-button {
      width: 188px;
   }
}
.ui.button {
    &.totp-verify-action-button {
        width: @TOTPVerifyActionButtonWidth;
        font-size: large;
    }
}
.ui.button {
    &.totp-verify-done-button {
        margin: 0.5rem;
    }
}

.ui.button {
    &.protocol-button {
           width: 220px;
          .protocol-button-icon {
              float:right;
          }
          .protocol-change-title {
                float: left;
          }
    }
}



.align-right.buttons{
    text-align: right;
}

/*******************************
     Keyboard Focus Styling
*******************************/

.ui.primary.button{
    &:focus-visible{
        outline: @focusVisibleOutline;
    }
}

.ui.button.secondary{
    &:focus-visible{
        outline: @focusVisibleOutline;
    }
}

.ui.grey.button{
    &:focus-visible{
        outline: @focusVisibleOutline;
    }
}

.ui.brown.button{
    &:focus-visible{
        outline: @focusVisibleOutline;
    }
}
